{
  "name": "@kudo/ui",
  "version": "0.0.1",
  "description": "Kudo - ui components",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "files": ["dist/**", "dist/global.css"],
  "types": "index.ts",
  "main": "./dist/index.js",
  "scripts": {
    "clean:bundle": "rimraf dist",
    "clean:node_modules": "pnpx rimraf node_modules",
