{
  "name": "@kudo/toolbar",
  "version": "0.3.4",
  "description": "Kudo - Toolbar",
  "type": "module",
  "private": true,
  "sideEffects": true,
  "files": ["dist/**"],
  "scripts": {
    "clean:bundle": "rimraf dist",
    "clean:node_modules": "pnpx rimraf node_modules",
    "clean:turbo": "rimraf .turbo",
    "clean": "pnpm clean:bundle && pnpm clean:node_modules && pnpm clean:turbo",
    "build:tailwindcss": "pnpm tailwindcss -i ./src/tailwind-input.css -o ./dist/tailwind-output.css -m",
    "build": "pnpm build:tailwindcss && vite build",
    "build:watch": "concurrently \"cross-env __DEV__=true vite build --mode development\" \"pnpm build:tailwindcss -- -w\"",
    "dev": "pnpm build:tailwindcss && pnpm build:watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "pnpm lint --fix",
    "format": "biome format --write",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@kudo/shared": "workspace:*",
    "@kudo/ui": "workspace:*",
    "@tanstack/react-query": "^5.65.1",
    "@tanstack/react-query-devtools": "^5.65.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "0.475.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-draggable": "^4.4.6",
    "react-hotkeys-hook": "^4.6.1",
    "react-simple-wysiwyg": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "usehooks-ts": "^3.1.0",
    "webextension-polyfill": "^0.12.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@kudo/biome-config": "workspace:*",
    "@kudo/hmr": "workspace:*",
    "@kudo/tsconfig": "workspace:*",
    "@kudo/vite-config": "workspace:*",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/webextension-polyfill": "^0.12.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "vite": "^6.1.0"
  }
}
