{
  "extends": "@kudo/tsconfig/utils",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./tests", "./fixtures"]
}

